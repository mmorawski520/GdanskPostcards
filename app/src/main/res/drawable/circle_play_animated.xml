<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/circle_play_solid"
        android:color="@color/beige" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/circle_play_solid"
        android:color="@color/beige"/>


    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/circle_info_solid"
        android:color="@color/black" />
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/circle_info_solid"
        android:color="@color/black"/>

    <!-- Pressed -->
    <item android:state_selected="true" android:state_pressed="true" android:drawable="@drawable/circle_play_solid"
        android:color="@color/black"/>
    <item android:state_pressed="@color/black" android:drawable="@drawable/circle_play_solid"
        android:color="@color/black" />

</selector>
