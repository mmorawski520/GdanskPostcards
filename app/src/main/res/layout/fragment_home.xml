<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gunmetal"
        tools:context=".ui.home.HomeFragment">

    <ImageView
            android:id="@+id/start_btn"
            android:src="@drawable/circle_play_solid"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:contentDescription="@string/start_btn_content_description"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:id="@+id/info_btn"
            android:src="@drawable/circle_info_solid"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:contentDescription="@string/info_btn_content_description"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>